@model IEnumerable<GestaoLocacaoInstrumentos.Models.Instrumento>


<div class="container">
    <h1>Lista de Instrumentos</h1>
    <p>
        <a asp-action="Create" class="btn btn-primary">Novo Instrumento</a>
    </p>
    <table class="table">
        <thead>
            <tr>
                <th>Modelo</th>
                <th>Marca</th>
                <th>Nome</th>
                <th>Descrição</th>
                <th>Valor Aluguel</th>
                <th>Ações</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Modelo</td>
                    <td>@item.Marca</td>
                    <td>@item.Nome</td>
                    <td>@item.Descricao</td>
                    <td>@item.ValorAluguel</td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning">Editar</a>
                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info">Detalhes</a>
                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger">Excluir</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
