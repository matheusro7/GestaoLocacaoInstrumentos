@model GestaoLocacaoInstrumentos.Models.Instrumento

<div class="container mt-4 text-light">
    <h2>Detalhes do Instrumento</h2>

    <div class="card bg-dark text-light mb-4" style="max-width: 600px;">
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-4">Nome:</dt>
                <dd class="col-sm-8">@Model.Nome</dd>

                <dt class="col-sm-4">Modelo:</dt>
                <dd class="col-sm-8">@Model.Modelo</dd>

                <dt class="col-sm-4">Marca:</dt>
                <dd class="col-sm-8">@Model.Marca</dd>

                <dt class="col-sm-4">Descrição:</dt>
                <dd class="col-sm-8">@Model.Descricao</dd>

                <dt class="col-sm-4">Valor Aluguel:</dt>
                <dd class="col-sm-8">@Model.ValorAluguel.ToString("C")</dd>

                <dt class="col-sm-4">ID:</dt>
                <dd class="col-sm-8">@Model.Id</dd>

                @* Se quiser adicionar algo como "Disponível", descomente e ajuste conforme o modelo *@
                @*<dt class="col-sm-4">Disponível</dt>
                <dd class="col-sm-8">@((Model.Disponivel) ? "Sim" : "Não")</dd>*@
            </dl>

            <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-outline-warning me-2">Editar</a>
            <a asp-action="Index" class="btn btn-outline-secondary">Voltar</a>
        </div>
    </div>
</div>
