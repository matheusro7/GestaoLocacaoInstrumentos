@model GestaoLocacaoInstrumentos.Models.Instrumento

<div class="container">
    <h2>Detalhes do Instrumento</h2>

    <dl class="row">
        <dt class="col-sm-2">Nome</dt>
        <dd class="col-sm-10">@Model.Nome</dd>

        <dt class="col-sm-2">Modelo</dt>
        <dd class="col-sm-10">@Model.Modelo</dd>

        <dt class="col-sm-2">Marca</dt>
        <dd class="col-sm-10">@Model.Marca:C</dd>

        <dt class="col-sm-2">Descricao</dt>
        <dd class="col-sm-10">@Model.Descricao:C</dd>

        <dt class="col-sm-2">ValorAluguel</dt>
        <dd class="col-sm-10">@Model.ValorAluguel:C</dd>

        <dt class="col-sm-2">Id</dt>
        <dd class="col-sm-10">@Model.Id:C</dd>

        <dt class="col-sm-2">Disponível</dt>
        <dd class="col-sm-10">@Model.Disponivel ? "Sim" : "Não"</dd>
    </dl>

    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">Editar</a>
    <a asp-action="Index" class="btn btn-secondary">Voltar</a>
</div>
