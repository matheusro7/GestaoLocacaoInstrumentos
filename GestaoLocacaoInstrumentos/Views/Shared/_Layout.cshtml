<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - GestaoLocacaoInstrumentos</title>

    <!-- Bootstrap 5 Dark Theme (usando Bootstrap padrão + modo dark) -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
          integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">

    <style>
        body {
            background-color: #121212;
            color: #e0e0e0;
        }

        .navbar, .footer {
            background-color: #1f1f1f;
        }

        .nav-link,
        .navbar-brand {
            color: #ffffff !important;
        }

            .nav-link:hover {
                color: #bbbbbb !important;
            }

        .card {
            background-color: #1e1e1e;
            color: #e0e0e0;
        }

        .form-control,
        .form-select {
            background-color: #2c2c2c;
            color: #ffffff;
            border: 1px solid #444;
        }

            .form-control::placeholder {
                color: #bbbbbb;
            }

        .btn-primary {
            background-color: #0066cc;
            border-color: #005bb5;
        }

            .btn-primary:hover {
                background-color: #005bb5;
            }

        .alert {
            background-color: #2c2c2c;
            border-color: #444;
            color: #fff;
        }
    </style>

    <!-- Seu CSS adicional -->
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/GestaoLocacaoInstrumentos.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark">
            <div class="container-fluid">
                <a class="navbar-brand" asp-controller="Home" asp-action="Index">GestaoLocacaoInstrumentos</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarContent"
                        aria-controls="navbarContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="navbarContent">
                    <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                        <li class="nav-item"><a class="nav-link" asp-controller="Home" asp-action="Index">Home</a></li>
                        <li class="nav-item"><a class="nav-link" asp-controller="Agendamento" asp-action="Index">Agendamento</a></li>
                        <li class="nav-item"><a class="nav-link" asp-controller="Instrumento" asp-action="Index">Instrumento</a></li>
                        <li class="nav-item"><a class="nav-link" asp-controller="Estudio" asp-action="Index">Estúdio</a></li>
                        <li class="nav-item"><a class="nav-link" asp-controller="Funcionario" asp-action="Index">Funcionário</a></li>
                        <li class="nav-item"><a class="nav-link" asp-controller="Cliente" asp-action="Index">Cliente</a></li>
                        <li class="nav-item"><a class="nav-link" asp-controller="Login" asp-action="Login">Login</a></li>
                        <li class="nav-item"><a class="nav-link" asp-controller="Relatorio" asp-action="Index">Relatório</a></li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <div class="container mt-4">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <!-- jQuery + Validação -->
    <script src="https://code.jquery.com/jquery-3.6.4.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/jquery-validation@1.19.5/dist/jquery.validate.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/jquery-validation-unobtrusive@3.2.12/dist/jquery.validate.unobtrusive.min.js"></script>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
            integrity="sha384-ENjdO4Dr2bkBIFxQpeoA6DQDkS2eM9eJkP7uWfYlqF/x0IbhFhZf5c5j5rjvG0gG"
            crossorigin="anonymous"></script>

    <!-- JS customizados -->
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/js/cliente.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)


    <body class="d-flex flex-column min-vh-100">
        <header>
            <!-- ... -->
        </header>

        <div class="container flex-grow-1">
            <main role="main" class="pb-3">
                @RenderBody()
            </main>
        </div>

        @* Footer será renderizado pela View *@
    </body>

</body>

</html>
