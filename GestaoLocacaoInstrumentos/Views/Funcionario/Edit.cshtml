@model GestaoLocacaoInstrumentos.Models.Funcionario

@{
    ViewData["Title"] = "Editar Funcionário";
}

<h2>Editar Funcionário</h2>

<form asp-action="Edit" method="post">
    <div class="form-group">
        <label asp-for="Id">ID</label>
        <input asp-for="Id" class="form-control" readonly />
    </div>
    <div class="form-group">
        <label asp-for="Nome">Nome</label>
        <input asp-for="Nome" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Senha">Senha</label>
        <input asp-for="Senha" class="form-control" type="password" />
    </div>
    <div class="form-group">
        <label asp-for="Cargo">Cargo</label>
        <select asp-for="Cargo" class="form-control" asp-items="Html.GetEnumSelectList<CargoEnum>()"></select>
    </div>
    <button type="submit" class="btn btn-success">Salvar Alterações</button>
    <a asp-action="Index" class="btn btn-secondary mt-3">Voltar</a>
</form>


