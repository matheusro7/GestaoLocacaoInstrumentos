@model IEnumerable<GestaoLocacaoInstrumentos.Models.Funcionario>

@{
    ViewData["Title"] = "Funcionários";
}

<h2 class="text-light mb-4">Lista de Funcionários</h2>

<a asp-action="Create" class="btn btn-success mb-3">+ Adicionar Funcionário</a>

@if (!Model.Any())
{
    <div class="alert alert-warning">
        Nenhum funcionário cadastrado.
    </div>
}
else
{
    <div class="table-responsive">
        <table class="table table-dark table-striped table-hover">
            <thead class="table-light">
                <tr>
                    <th>Nome</th>
                    <th>Cargo</th>
                    <th>ID</th>
                    <th>Ações</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var funcionario in Model)
                {
                    <tr>
                        <td>@funcionario.Nome</td>
                        <td>@funcionario.Cargo</td>
                        <td>@funcionario.Id</td>
                        <td>
                            <a asp-action="Details" asp-route-id="@funcionario.Id" class="btn btn-outline-info btn-sm">Detalhes</a>
                            <a asp-action="Edit" asp-route-id="@funcionario.Id" class="btn btn-outline-warning btn-sm ms-1">Editar</a>
                            <a asp-action="Delete" asp-route-id="@funcionario.Id" class="btn btn-outline-danger btn-sm ms-1">Excluir</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}
<!-- Footer -->
<footer class="text-center mt-5 py-3 bg-dark text-light">
    <p>&copy; @DateTime.Now.Year - RO7 Estúdio</p>
</footer>