@model GestaoLocacaoInstrumentos.Models.Estudio

<div class="container mt-4 text-light">
    <h2>Detalhes do Estúdio</h2>

    <div class="card bg-dark text-light mb-4" style="max-width: 600px;">
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-4">Nome:</dt>
                <dd class="col-sm-8">@Model.Nome</dd>

                <dt class="col-sm-4">Capacidade Pessoas:</dt>
                <dd class="col-sm-8">@Model.Capacidade</dd>

                <dt class="col-sm-4">Endereço:</dt>
                <dd class="col-sm-8">@Model.Endereco</dd>

                <dt class="col-sm-4">Descrição:</dt>
                <dd class="col-sm-8">@Model.Descricao</dd>

                <dt class="col-sm-4">Valor:</dt>
                <dd class="col-sm-8">@Model.Valor.ToString("C")</dd>
            </dl>

            <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-outline-warning me-2">Editar</a>
            <a asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-outline-danger me-2">Excluir</a>
            <a asp-action="Index" class="btn btn-outline-secondary">Voltar</a>
        </div>
    </div>
</div>
