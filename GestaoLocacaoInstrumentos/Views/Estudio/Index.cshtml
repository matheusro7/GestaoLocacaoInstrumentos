@model IEnumerable<GestaoLocacaoInstrumentos.Models.Estudio>



<h1>Lista de Salas de Estúdio</h1>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Nome</th>
            <th>Capacidade</th>
            <th>Valor</th>
            <th>Descrição</th>
            <th>Ações</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var estudio in Model)
        {
            <tr>
                <td>@estudio.Nome</td>
                <td>@estudio.Capacidade</td>
                <td>@estudio.Valor.ToString("C")</td>
                <td>@estudio.Descricao</td>
                <td>
                    <a class="btn btn-info" asp-action="Details" asp-route-id="@estudio.Id" class="btn btn-info">Detalhes</a>
                    <a class="btn btn-primary" asp-action="Edit" asp-route-id="@estudio.Id" class="btn btn-warning">Editar</a>
                    <a class="btn btn-danger" asp-action="Delete" asp-route-id="@estudio.Id" class="btn btn-danger">Excluir</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<a class="btn btn-success" asp-action="Create">Adicionar Novo Estúdio</a>
