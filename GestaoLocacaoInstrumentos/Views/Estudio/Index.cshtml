@model IEnumerable<GestaoLocacaoInstrumentos.Models.Estudio>

@{
    ViewData["Title"] = "Estúdios";
}

<h2 class="text-light mb-4">Lista de Salas de Estúdio</h2>

<a asp-action="Create" class="btn btn-success mb-3">+ Adicionar Novo Estúdio</a>

@if (!Model.Any())
{
    <div class="alert alert-warning">
        Nenhuma sala de estúdio cadastrada.
    </div>
}
else
{
    <div class="table-responsive">
        <table class="table table-dark table-striped table-hover">
            <thead class="table-light">
                <tr>
                    <th>Nome</th>
                    <th>Capacidade Pessoas</th>
                    <th>Valor</th>
                    <th>Descrição</th>
                    <th>Ações</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var estudio in Model)
                {
                    <tr>
                        <td>@estudio.Nome</td>
                        <td>@estudio.Capacidade</td>
                        <td>@estudio.Valor.ToString("C")</td>
                        <td>@estudio.Descricao</td>
                        <td>
                            <a asp-action="Details" asp-route-id="@estudio.Id" class="btn btn-outline-info btn-sm">Detalhes</a>
                            <a asp-action="Edit" asp-route-id="@estudio.Id" class="btn btn-outline-warning btn-sm ms-1">Editar</a>
                            <a asp-action="Delete" asp-route-id="@estudio.Id" class="btn btn-outline-danger btn-sm ms-1">Excluir</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}
<!-- Footer -->
<footer class="text-center mt-5 py-3 bg-dark text-light">
    <p>&copy; @DateTime.Now.Year - RO7 Estúdio</p>
</footer>
