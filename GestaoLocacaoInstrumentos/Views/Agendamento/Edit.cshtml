@model GestaoLocacaoInstrumentos.Models.Agendamento

<h2>Editar Agendamento</h2>

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="Id" />
    <div class="mb-3">
        <label for="Estudio" class="form-label">Estúdio</label>
        <select asp-for="Estudio" class="form-select" required>
            <option value="Estúdio A">Estúdio A </option>
            <option value="Estúdio B">Estúdio B </option>
        </select>
    </div>
    <div class="form-group">
        <label for="Cliente">Cliente</label>
        <input type="text" class="form-control" asp-for="Cliente" />
    </div>
    <div class="form-group">
        <label for="Data">Data</label>
        <input type="date" class="form-control" asp-for="Data" />
    </div>
    <div class="form-group">
        <label for="HoraInicio">Hora Início</label>
        <input type="time" class="form-control" asp-for="HoraInicio" />
    </div>
    <div class="form-group">
        <label for="HoraFim">Hora Fim</label>
        <input type="time" class="form-control" asp-for="HoraFim" />
    </div>
    <br>
    <button type="submit" class="btn btn-success">Salvar Alterações</button>
    <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
</form>
