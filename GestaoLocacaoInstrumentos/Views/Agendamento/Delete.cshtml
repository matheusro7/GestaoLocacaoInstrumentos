@model GestaoLocacaoInstrumentos.Models.Agendamento

<h2>Confirmar Exclusão</h2>

<p>Tem certeza que deseja excluir o agendamento?</p>

<div>
    <p><strong>Nome:</strong> @Model.Estudio</p>
    <p><strong>Data:</strong> @Model.Data.ToString("dd/MM/yyyy")</p>
</div>

<form method="post" asp-action="DeleteConfirmed" asp-route-id="@Model.Id">
    <button type="submit" class="btn btn-danger">Confirmar Exclusão</button>
    <a href="@Url.Action("Index")" class="btn btn-secondary">Cancelar</a>
</form>
