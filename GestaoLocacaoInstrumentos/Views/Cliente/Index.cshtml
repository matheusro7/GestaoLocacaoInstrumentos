@model IEnumerable<GestaoLocacaoInstrumentos.Models.Cliente>

@{
    ViewData["Title"] = "Clientes";
}

<h2 class="text-light mb-4">Lista de Clientes</h2>

<a asp-action="Create" class="btn btn-success mb-3">+ Adicionar Cliente</a>

<!-- Alerta de sucesso -->
@if (TempData["MensagemSucesso"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        @TempData["MensagemSucesso"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Fechar"></button>
    </div>
}

@if (!Model.Any())
{
    <div class="alert alert-warning">
        Nenhum cliente cadastrado.
    </div>
}
else
{
    <div class="table-responsive">
        <table class="table table-dark table-striped table-hover">
            <thead class="table-light">
                <tr>
                    <th>Nome</th>
                    <th>Email</th>
                    <th>ID</th>
                    <th>Ações</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var cliente in Model)
                {
                    <tr>
                        <td width="20%">@cliente.Nome</td>
                        <td>@cliente.Email</td>
                        <td width="10%">@cliente.Id</td>
                        <td width="20%">
                            <a asp-action="Details" asp-route-id="@cliente.Id" class="btn btn-outline-info btn-sm">Detalhes</a>
                            <a asp-action="Edit" asp-route-id="@cliente.Id" class="btn btn-outline-warning btn-sm ms-1">Editar</a>
                            <a asp-action="Delete" asp-route-id="@cliente.Id" class="btn btn-outline-danger btn-sm ms-1">Excluir</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}
